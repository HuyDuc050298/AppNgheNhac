<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten Bai Hat"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="100px"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_song"
            android:layout_centerInParent="true">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="200px">
            <ImageView
                android:id="@+id/ic_suffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_suffle"/>
            <ImageView
                android:id="@+id/ic_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_previous"
                android:layout_toRightOf="@id/ic_suffle"
                android:layout_marginLeft="100px"/>
            <ImageView
                android:id="@+id/ic_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_play"
                android:layout_toRightOf="@id/ic_previous"
                android:layout_marginLeft="100px"/>
            <ImageView
                android:id="@+id/ic_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_toRightOf="@id/ic_play"
                android:layout_marginLeft="100px"/>
            <ImageView
                android:id="@+id/ic_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_loop"
                android:layout_toRightOf="@id/ic_next"
                android:layout_marginLeft="100px"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>